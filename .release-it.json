{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}",
    "tagName": "${version}"
  },
  "hooks": {
    "after:bump1": [
      "lerna publish from-package --yes"
    ],
    "after:bump2": [
      "lerna version --conventional-commits --yes --no-push"
    ],
    "before:init": [
      "lerna version --no-git-tag-version --no-push --yes"
    ]
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "lerna.json",
      "out": {
        "file": "lerna.json",
        "path": "version"
      }
    },
    "lerna-changelog": {
      "infile": "CHANGELOG.md",
      "preset": "angular"
    }
  }
}