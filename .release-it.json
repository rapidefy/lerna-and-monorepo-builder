{
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release v${version}"
  },
  "hooks": {
    "before:init1": [
      "lerna version ${version} --no-push --no-commit --yes",
      "composer run monorepo:set-package-version ${version}"
    ],
    "after:bump1": [
      "lerna publish from-package --yes"
    ],
    "before:init1": [
      "lerna version --conventional-commits --yes --no-push"
    ]
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it-plugins/lerna-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "launchEditor": true
    }
  }
}